from time import *
import time
from plyer import vibrator

#Variables :
condition = False
buttonStop = True
temps = 100
nbPeriodes = int(input("nombre de périodes : "))
tempsParPeriode = int(input("temps par période (secondes) : "))   #en secondes

#Fonctions :
def stop() :
   if buttonStop == False :
      condition = True
               
#Programme : 
for eachPeriode in range(nbPeriodes) :
   stop()
   if condition :
      break
   t1 = time.time()
   stop()
   if condition :
      break
   temps = 2
   while temps > 1 :
      stop()
      if condition:
         break
      sleep(1)
      stop()
      if condition:
         break
      t2 = time.time() - t1
      stop()
      if condition:
         break
      temps = tempsParPeriode - t2
      stop()
      if condition:
         break
   if -1 <= temps <= 1 :                                       # marge d'erreur corrigée ensuite par le sleep(temps)
       sleep(temps)
       vibrator.vibrate(1)                                     #pour faire vibrer pendant 1 seconde
